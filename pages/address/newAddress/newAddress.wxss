page {  
  display: block;  
  min-height: 100%;  
  background-color:#f6f6f6;
  font-size: 30rpx;
  color:#353535;
  position: relative;
}

text {
  width: 100%;
}

.info{
  background-color: #fff;
  width:100%;
}

.item{
  height:90rpx;
  align-items: center;
  display:flex;
  border-bottom:1rpx solid #eee;
  margin-left: 30rpx;
}

button{

  width:75%;
  margin-top:50rpx;
  font-size: 36rpx;
}

.save{
  background-color: rgb(255,117,0);
  color:#fff;
}

.right{

  padding-left: 30rpx;
  width:80%;
  display:flex;

}

input{
  width:100%;
  float: right;
  text-align: right;
  margin-right:30rpx;
}