
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 直接设置swiper属性 */
swiper {
  height: 350rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.introduction {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.introduction .goodsName {
  font-weight: bold;
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.introduction .goodsPrice {
  color: black;
  font-size: 40rpx;
  margin: 10rpx;
}
.introduction .goodsDiscription {
  font-weight: lighter;
  color:darkgray;
  font-size: 30rpx;
  margin: 10rpx;
}
.evaluation {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  font-size: 40rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 30rpx;
  margin: 10rpx;
}
.overview .title {
    margin: 10rpx;
    border-bottom: 1px solid #d8d8d8;
    padding-bottom: 10rpx;
    font-size: 40rpx;
    font-weight: bold;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}

button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 0rpx 5rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
.button-orange {
  background-color: orange;
}
.button-red {
  background-color: #f44336; /* 红色 */
}

/* 占位 */
.separate{
  height:10rpx;
  background-color:#d8d8d8;
}
.temp {
  height: 100rpx;
}
